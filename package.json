{
  "name": "lev-api",
  "version": "0.0.4",
  "description": "Life Event Verification API",
  "main": "src/app.js",
  "scripts": {
    "start": "node .",
    "start:dev": "NODE_ENV=development POSTGRES_DB=levdb POSTGRES_USER=lev POSTGRES_PASSWORD=lev nodemon -w src/ -w config.js .",
    "test": "npm run test:cover && npm run test:check-coverage",
    "test:unit": "mocha --reporter spec ./test/unit",
    "test:cover": "nyc --all npm run test:unit && nyc report --reporter=html",
    "test:check-coverage": "nyc check-coverage --statements 0 --branches 0 --functions 0 --lines 0",
    "postinstall": "true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UKHomeOffice/lev-api"
  },
  "author": "Daniel A.C. Martin <npm@daniel-martin.co.uk> (http://daniel-martin.co.uk/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/UKHomeOffice/lev-api/issues"
  },
  "homepage": "https://github.com/UKHomeOffice/lev-api#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^4.1.0",
    "nodemon": "^1.14.12",
    "nyc": "^11.4.1",
    "proxyquire": "^1.8.0",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "functional-augments-object": "^0.1.1",
    "moment": "^2.20.1",
    "pg-monitor": "^0.8.3",
    "pg-promise": "^7.3.2",
    "restify": "^6.3.4",
    "restify-bunyan-logger": "^2.0.7",
    "restify-errors": "^5.0.0"
  },
  "nyc": {
    "include": [
      "src/",
      "config.js"
    ]
  }
}
